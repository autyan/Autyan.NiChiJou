@model Autyan.NiChiJou.IdentityServer.Models.Auth.UserRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="col-lg-12" style="margin-top: 100px;">
    <form asp-action="Register" class="col-lg-6 col-lg-offset-3" >
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 style="text-align: center;">User Register</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label asp-for="LoginName">Login Name</label>
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                        <input asp-for="LoginName" class="form-control" placeholder="Input Login Name">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Input Password">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm">Password Confirm</label>
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
                        <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Input PasswordConfirm">
                    </div>
                </div>
                <div asp-validation-summary="All"></div>
            </div>
            <div class="panel-footer" style="Height: 55px;">
                <input type="submit" value="Submit" class="btn btn-primary" style="float: right;" />
            </div>
        </div>
    </form>
</div>
