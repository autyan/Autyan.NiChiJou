@model Autyan.NiChiJou.DTO.Blog.ArticleDetail
@{
    ViewData["Title"] = Model.Title;
}

<div class="panel panel-primary">
    <div class="panel-body">
        <h3>@Model.Title</h3>
        <hr />
        @Html.Raw(Model.Content)
        <hr />
        <ul class="list-group">
            <li class="list-group-item">
                <div>
                    @Model.Comments.Count() comments
                </div>
                <div class="input-group">
                    <input type="text" class="form-control" />
                    <div class="input-group-btn">
                        <input type="button" class="btn btn-primary" value="Add comment" />
                    </div>
                </div>
                @{
                    foreach (var articleComment in Model.Comments)
                    {
                        <hr />
                        <span class="tag">@articleComment.CreatedAt?.LocalDateTime</span>
                        <span class="tag">@(articleComment.CommentedBy ?? "anonymous")</span>
                        <div class="comContent">
                            <p>
                                <i>@articleComment.Content</i>
                            </p>
                        </div>
                    }
                }
            </li>
        </ul>
    </div>
</div>

