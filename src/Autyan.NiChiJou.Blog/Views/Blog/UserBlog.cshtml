@using Autyan.NiChiJou.DTO.Blog
@model BlogIndex

@{
    ViewBag.Title = Model.BlogName;
    Layout = "_Layout";
}

<div class="col-lg-12">
    <div class="col-lg-9">
        @await Component.InvokeAsync("PagedArticle", new PagedArticleQueryViewModel
        {
            BlogId = Model.BlogId,
            Index = 1,
            PageSize = 10
        })
    </div>
    <div class="col-lg-2 col-md-offset-1">
        @await Component.InvokeAsync("BlogUserGeneral", Model.BlogUserId)
    </div>
</div>