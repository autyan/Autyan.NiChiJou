@using Autyan.NiChiJou.Core.Context
@using Autyan.NiChiJou.Core.Mvc.Extension
@using Autyan.NiChiJou.Core.Options
@using Autyan.NiChiJou.Service.DTO.Blog
@using Microsoft.Extensions.Options
@inject IOptions<AutyanCookieOptions> Options
@inject IIdentityContext<BlogIdentity> IdentityContext
@if (Context.IsSignedIn(Options.Value.Schema))
{
    <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-Controller="Blog" asp-action="@IdentityContext.Identity.BlogName" title="Manage">@IdentityContext.Identity.NickName</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Auth" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Auth" asp-action="Login">Log in</a></li>
    </ul>
}